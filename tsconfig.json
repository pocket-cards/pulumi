{
  "compilerOptions": {
    "strict": true,
    "outDir": "build",
    "rootDirs": [
      "architecture",
      "consts",
      "initialize",
      "install"
    ],
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "experimentalDecorators": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": "."
  },
  "files": [
    "typings/index.d.ts",
    "typings/install.d.ts",
    "typings/initialize.d.ts",
    "typings/frontend.d.ts",
    "typings/backend.d.ts"
  ],
  "include": [
    "architecture/**/*.ts",
    "consts/**/*.ts",
    "initialize/**/*.ts",
    "install/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}